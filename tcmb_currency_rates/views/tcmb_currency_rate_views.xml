<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="tcmb_currency_rate_tree" model="ir.ui.view">
        <field name="name">tcmb.currency.rate.tree</field>
        <field name="model">tcmb.currency.rate</field>
        <field name="arch" type="xml">
            <list string="TCMB Currency Rates" 
                  decoration-success="is_synced" 
                  decoration-muted="not is_synced"
                  create="false">
                <header>
                    <button name="action_update_and_sync"
                            string="Update from TCMB"
                            type="object"
                            class="oe_highlight"
                            icon="fa-refresh"/>
                </header>
                <field name="rate_type_label" string="Rate Type in Use" readonly="1" optional="show"/>
                <field name="date"/>
                <field name="currency_code"/>
                <field name="currency_name"/>
                <field name="unit"/>
                <field name="forex_buying" optional="show"/>
                <field name="forex_selling"/>
                <field name="banknote_buying" optional="hide"/>
                <field name="banknote_selling" optional="hide"/>
                <field name="effective_rate"/>
                <field name="is_synced" widget="boolean_toggle"/>
                <field name="currency_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="tcmb_currency_rate_form" model="ir.ui.view">
        <field name="name">tcmb.currency.rate.form</field>
        <field name="model">tcmb.currency.rate</field>
        <field name="arch" type="xml">
            <form string="TCMB Currency Rate" create="false" edit="false">
                <header>
                    <button name="action_sync_to_odoo" 
                            string="Sync to Odoo" 
                            type="object" 
                            class="oe_highlight"
                            invisible="is_synced"/>
                    <field name="is_synced" widget="boolean"/>
                </header>
                <sheet>
                    <group>
                        <group string="Currency Info">
                            <field name="date"/>
                            <field name="currency_code"/>
                            <field name="currency_name"/>
                            <field name="currency_id"/>
                            <field name="unit"/>
                        </group>
                        <group string="Rates (TRY)">
                            <field name="forex_buying"/>
                            <field name="forex_selling"/>
                            <field name="banknote_buying"/>
                            <field name="banknote_selling"/>
                            <field name="effective_rate" readonly="1"/>
                        </group>
                    </group>
                    <group string="Sync Info" invisible="not is_synced">
                        <field name="sync_date"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="tcmb_currency_rate_search" model="ir.ui.view">
        <field name="name">tcmb.currency.rate.search</field>
        <field name="model">tcmb.currency.rate</field>
        <field name="arch" type="xml">
            <search>
                <field name="currency_code"/>
                <field name="currency_name"/>
                <field name="date"/>
                <filter name="synced" string="Synced" domain="[('is_synced', '=', True)]"/>
                <filter name="not_synced" string="Not Synced" domain="[('is_synced', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="tcmb_currency_rate_action" model="ir.actions.act_window">
        <field name="name">TCMB Exchange Rates</field>
        <field name="res_model">tcmb.currency.rate</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No TCMB rates found
            </p>
            <p>
                Go to <strong>TCMB Rates â†’ Update from TCMB</strong> in the menu to fetch and sync today's rates.
            </p>
        </field>
    </record>
</odoo>
